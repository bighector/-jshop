<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://code.alibabatech.com/schema/dubbo
        http://code.alibabatech.com/schema/dubbo/dubbo.xsd">
    <!-- 注册DUBBO服务 -->
    <dubbo:application name="jshop-trade-service"/>
    <dubbo:registry protocol="zookeeper" address="${dubbo.zookeeper.center}"/>
    <dubbo:provider protocol="dubbo" port="-1"
                    filter="-exception" accesslog="true"
                    threadpool="fixed" threads="200"/>

    <!--订单信息服务-->
    <dubbo:service interface="net.jeeshop.services.front.order.OrderService"
                   ref="orderServiceImpl" group="${jshop.trade.group:jshop-trade} "
                   version="0.0.1" timeout="${jshop.dubbo.timeout:5000}"/>

    <!--订单详情服务-->
    <dubbo:service interface="net.jeeshop.services.front.orderdetail.OrderdetailService"
                   ref="orderdetailServiceImpl" group="${jshop.trade.group:jshop-trade} "
                   version="0.0.1" timeout="${jshop.dubbo.timeout:5000}"/>

    <!--订单日志服务-->
    <dubbo:service interface="net.jeeshop.services.front.orderlog.OrderlogService"
                   ref="orderlogServiceImpl" group="${jshop.trade.group:jshop-trade} "
                   version="0.0.1" timeout="${jshop.dubbo.timeout:5000}"/>

    <!--订单支付服务-->
    <dubbo:service interface="net.jeeshop.services.front.orderpay.OrderpayService"
                   ref="orderpayServiceImpl" group="${jshop.trade.group:jshop-trade} "
                   version="0.0.1" timeout="${jshop.dubbo.timeout:5000}"/>

    <!--订单配送服务-->
    <dubbo:service interface="net.jeeshop.services.front.ordership.OrdershipService"
                   ref="ordershipServiceImpl" group="${jshop.trade.group:jshop-trade} "
                   version="0.0.1" timeout="${jshop.dubbo.timeout:5000}"/>

    <!--支付服务-->
    <dubbo:service interface="net.jeeshop.services.front.pay.PayService"
                   ref="payServiceImpl" group="${jshop.trade.group:jshop-trade} "
                   version="0.0.1" timeout="${jshop.dubbo.timeout:5000}"/>

    <!--快递配送服务-->
    <dubbo:service interface="net.jeeshop.services.front.express.ExpressService"
                   ref="expressServiceFront" group="${jshop.trade.group:jshop-trade} "
                   version="0.0.1" timeout="${jshop.dubbo.timeout:5000}"/>







</beans>