<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="net.jeeshop.biz.system.client.SysUserMapperExt" >
  <resultMap id="BaseResultMap" type="net.jeeshop.biz.system.bean.SysUserBean" extends="net.jeeshop.client.system.SysUserMapper.BaseResultMap">
    <result column="role_name" property="roleName" jdbcType="VARCHAR" />
  </resultMap>
  <select id="selectByParams" resultMap="BaseResultMap" parameterType="net.jeeshop.model.system.SysUserExample" >
      select u.*,r.role_name from t_user u, t_role r
      where u.rid = r.id
      order by u.username desc
    </select>
    <select id="selectUserBeanById" resultMap="BaseResultMap" parameterType="long" >
        select u.*,r.role_name from t_user u, t_role r
        where u.rid = r.id
        and u.id = #{id}
    </select>
</mapper>