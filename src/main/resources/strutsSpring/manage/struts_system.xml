<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
    "http://struts.apache.org/dtds/struts-2.3.dtd">
    
<struts>
    <package name="user" namespace="/manage" extends="struts-jeeshop-manage">
        <action name="user" class="userActionManage">
            <result name="input" type="redirect">/manage/admin.jsp</result>
            <result name="success" type="freemarker" >/manage/main.ftl</result>
            <result name="toList" type="freemarker">/manage/system/user/userList.ftl</result>
            <result name="toAdd" type="freemarker">/manage/system/user/editUser.ftl</result>
            <result name="toEdit" type="freemarker">/manage/system/user/editUser.ftl</result>
            <result name="toChangePwd" type="freemarker">/manage/system/user/toChangePwd.ftl</result>
            <result name="changePwd" type="freemarker">/manage/system/user/changePwd.ftl</result>
            <result name="show" type="freemarker">/manage/system/user/show.ftl</result>
            <result name="initManageIndex" type="freemarker">/manage/system/right.ftl</result>
        </action>
    </package>
    
    <package name="role" namespace="/manage" extends="struts-jeeshop-manage">
        <action name="role" class="roleActionManage">
            <result name="toList" type="freemarker">/manage/system/role/roleList.ftl</result>
            <result name="toEdit" type="freemarker">/manage/system/role/editRole.ftl</result>
            <result name="toAdd" type="freemarker">/manage/system/role/editRole.ftl</result>
        </action>
    </package>
    
    <package name="menu" namespace="/manage" extends="struts-jeeshop-manage">
        <action name="menu" class="menuActionManage">
            <result name="toList" type="freemarker">/manage/system/menu/menuList.ftl</result>
            <result name="toEdit" type="freemarker">/manage/system/menu/editMenu.ftl</result>
            <result name="addOrUpdate" type="freemarker">/manage/system/menu/addOrUpdate.ftl</result>
        </action>
    </package>
    
</struts>
